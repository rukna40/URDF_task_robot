<?xml version='1.0'?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find robot)/urdf/robot.gazebo" />
  
  <gazebo reference="fl_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="fr_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="bl_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="br_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="camera">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="gps_link">
    <material>Gazebo/Orange</material>
  </gazebo>

  <gazebo reference="chassis">
    <material>Gazebo/Blue</material>
  </gazebo>

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.3 0.1 0.15" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="camera" />  
    <axis xyz="0 1 0"/> 
  </joint>

  <joint name="hokuyo_joint" type="fixed">
    <origin xyz="0.2 -0.1 0.15" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="hokuyo" />  
    <axis xyz="0 1 0"/> 
  </joint>

  <joint type="continuous" name="fl_wheel_joint">
    <origin xyz="0 0.30 0" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="fl_wheel" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="10000" velocity="1000" />
    <dynamics damping="1.0" friction="1.0" />
  </joint>

  <joint type="continuous" name="fr_wheel_joint">
    <origin xyz="0 -0.30 0" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="fr_wheel" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="10000" velocity="1000" />
    <dynamics damping="1.0" friction="1.0" />
  </joint>

  

    <joint type="continuous" name="bl_wheel_joint">
    <origin xyz="0.70 0.30 0" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="bl_wheel" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="10000" velocity="1000" />
    <dynamics damping="1.0" friction="1.0" />
  </joint>

  <joint type="continuous" name="br_wheel_joint">
    <origin xyz="0.70 -0.30 0" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="br_wheel" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="10000" velocity="1000" />
    <dynamics damping="1.0" friction="1.0" />
  </joint>

  
<link name="camera">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <inertia
        ixx="1e-6" ixy="0.0" ixz="0.0"
        iyy="1e-6" iyz="0.0"
        izz="1e-6"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>

  </link>

  <link name="hokuyo">
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <inertia
        ixx="1e-6" ixy="0.0" ixz="0.0"
        iyy="1e-6" iyz="0.0"
        izz="1e-6"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

  </link>

  <link name="fl_wheel">
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
        ixx="0.1" ixy="0.0" ixz="0.0"
        iyy="0.1" iyz="0.0"
        izz="0.1"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>

  </link>

  <link name="fr_wheel">
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
        ixx="0.1" ixy="0.0" ixz="0.0"
        iyy="0.1" iyz="0.0"
        izz="0.1"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>

  </link>




    <link name="bl_wheel">
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
        ixx="0.1" ixy="0.0" ixz="0.0"
        iyy="0.1" iyz="0.0"
        izz="0.1"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>

  </link>

  <link name="br_wheel">
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
        ixx="0.1" ixy="0.0" ixz="0.0"
        iyy="0.1" iyz="0.0"
        izz="0.1"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>

  </link>





  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision>
      <origin xyz="0.4 0 0.075" rpy=" 0 0 0"/> 
      <geometry>
        <box size="1.2 0.6 0.25"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0.4 0 0.075" rpy=" 0 0 0"/>
      <geometry>
       <box size="1.2 0.6 0.25"/>
      </geometry>
    </visual>

  </link>

  <joint name="gps_joint" type="fixed">
    <origin xyz="0.45 0.1 0.15" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="gps_link" />  
    <axis xyz="0 1 0"/> 
  </joint>


  <link name="gps_link">
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>

  <joint name="imu" type="fixed">
    <origin xyz="0 0 0.2" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="imu_link" />  
    <axis xyz="0 1 0"/> 
  </joint>


  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <joint name="ZED2_joint" type="fixed">
    <origin xyz="0.45 0 0.3" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="ZED2_link" />  
    <axis xyz="0 1 0"/> 
  </joint>

  <link name="ZED2_link">
    <visual>
      <geometry>
        <box size="0.05 0.1 0.05"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.1 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
  


</robot>